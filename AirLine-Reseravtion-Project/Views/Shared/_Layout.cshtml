<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirLine_Reseravtion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  mb-0">
            <div class="container text-center">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">AirLine_Reseravtion</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item pt-2">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item pt-2">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        
                        <li class="nav-item pt-2">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Destination">Destination</a>
                        </li>
                        <li class="nav-item pt-2">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>


                        <li class="d-flex align-items-center ms-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="UserLogin" asp-action="Login">
                                <span class="px-3 me-2">Login</span>
                            </a>
                        </li>
                        <li class="d-flex align-items-center">
                            <a class="nav-link text-light" asp-area="" asp-controller="UserSignUp" asp-action="SignUp">
                                <span class="btn btn-primary me-2">Sign up</span>
                            </a>
                        </li>


                    </ul>
                </div>
               
                </div>
</nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container text-white">
            &copy; 2024 - AirLine_Reseravtion - <a asp-area="" asp-controller="Home" asp-action="About">About us</a> -
            <a asp-area="" asp-controller="Home" asp-action="Services">Services</a> -
            <a asp-area="" asp-controller="Home" asp-action="Destination">Destination</a> -
            <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
