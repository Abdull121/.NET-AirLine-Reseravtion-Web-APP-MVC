@model CommonModel.Module.LoginFormModel
@{
    ViewData["Title"] = "SignUp";
}



<section class="vh-100" style="background-color: white;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-75">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong h-100" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-controller="UserLogin" asp-action="Login" method="post" class="login-form">
                            <h2>Log In</h2>
                            <p>Please fill in this form to log in to your account!</p>

                            <div class="form-group py-2">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Password" class="form-control" placeholder="Password" id="Showpassword" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-check d-flex justify-content-start mb-4">
                                <input onclick="showbtn()" class="form-check-input" type="checkbox" value="" />
                                <label class="form-check-label"> Show Password </label>
                            </div>

                            <button type="submit" class="btn btn-primary">Log In</button>
                            <p class="p-3 signup-link">Don't have an account? <a href="@Url.Action("SignUp", "UserSignUp")"> <span style="color: #0d6efd"> Sign Up here</span></a>.</p>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



